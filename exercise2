create database Shop;
use Shop;

create table Sales (
saleID int primary key not null,
productID int not null,
saleDate date not null,
quantity int not null,
amount decimal ( 10 , 2 )
);

insert into Sales 
values 
(1,2,'2025-11-1','2',500.00),
(2,3,'2025-11-3','5',600.00),
(3,5,'2025-11-6','4',700.00),
(4,4,'2025-11-7','3',800.00);

select * from Sales;
select 
productID,
count( saleID) as total_orders 
from Sales
group by productID;
